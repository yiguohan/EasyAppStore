<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_fcfcfc"
    tools:context="com.yiguohan.easyappstore.SplashActivity">

    <ImageView
        android:id="@+id/banner_img"
        android:layout_width="match_parent"
        android:layout_height="112dip"
        android:layout_centerInParent="true"
        android:src="@drawable/img_banner_essential_vertical"/>

    <Button
        android:id="@+id/enter_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="6dp"
        android:layout_weight="1.0"
        android:background="@drawable/dialog_button_select"
        android:text="进入首页"
        android:textAllCaps="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/blue_text_007dff"
        android:textSize="@dimen/res_textsize_14dp"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>
